{
  "name": "factoriotextplategen",
  "type": "module",
  "version": "0.1.0",
  "description": "Generates a Factorio text plate blueprint for the given text. Requires the text plates mod.",
  "homepage": "https://github.com/Sv443/FactorioTextPlateGen",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "nodemon -I --exec tsx src/index.ts",
    "test": "tsx test.ts",
    "build": "tsc && nexe --build -i dist/src/index.js -o dist/factoriotextplategen"
  },
  "author": {
    "name": "Sv443",
    "url": "https://github.com/Sv443"
  },
  "license": "MIT",
  "dependencies": {
    "prompts": "^2.4.2",
    "tslib": "^2.8.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/node": "^22.8.4",
    "@types/prompts": "^2.4.9",
    "nexe": "4.0.0-rc.6",
    "nodemon": "^3.1.7"
  },
  "nodemonConfig": {
    "ignore": ["dist/*"],
    "watch": ["src"],
    "ext": "ts,json,js"
  }
}
