{
  "name": "factoriotextplategen",
  "type": "module",
  "version": "0.1.0",
  "description": "Generates a Factorio text plate blueprint for the given text. Requires the text plates mod.",
  "homepage": "https://github.com/Sv443/FactorioTextPlateGen",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "tsx .",
    "dev": "nodemon -I --exec pnpm start",
    "watch": "nodemon -I --exec pnpm pre-build",
    "test": "tsx test.ts",
    "link": "pnpm run pre-build && npm link",
    "pre-build": "tsc"
  },
  "bin": {
    "factorio-text-plate-gen": "src/cli.mjs",
    "factoriotextplategen": "src/cli.mjs"
  },
  "author": {
    "name": "Sv443",
    "url": "https://github.com/Sv443"
  },
  "license": "MIT",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "prompts": "^2.4.2",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.8.4",
    "@types/prompts": "^2.4.9",
    "nodemon": "^3.1.7",
    "pnpm": "^9.12.3",
    "tsx": "^4.19.2"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts,json,js"
  }
}
